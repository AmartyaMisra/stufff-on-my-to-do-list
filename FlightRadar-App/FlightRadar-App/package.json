{
  "name": "flightradar-app",
  "version": "1.0.0",
  "description": "24x7 Flight Radar - Electron + React + Leaflet (OpenSky)",
  "main": "main.js",
  "type": "module",
  "author": "Amartya Misra",
  "scripts": {
    "start": "npm run build && electron .",
    "dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
    "build": "vite build",
    "build:icon": "node tools/make-icon.js",
    "dist": "npm run build && electron-builder --win --mac --linux",
    "dist:win": "npm run build && electron-builder --win",
    "prod": "npm run build && electron .",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "leaflet": "^1.9.4",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-leaflet": "^4.2.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^8.2.2",
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "sharp": "^0.33.4",
    "to-ico": "^1.1.5",
    "vite": "^5.4.2",
    "wait-on": "^7.0.1"
  },
  "build": {
    "appId": "com.amartyamisra.flightradar",
    "productName": "FlightRadar-App",
    "files": [
      "dist/**/*",
      "main.js",
      "preload.cjs",
      "package.json"
    ],
    "directories": {
      "buildResources": "build",
      "output": "release"
    },
    "asar": true,
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
